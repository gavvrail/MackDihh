@model FoodOrderingSystem.Controllers.StudentVerificationViewModel

@{
    ViewData["Title"] = "Student Verification";
}

@section Styles {
    <link rel="stylesheet" href="~/css/deals.css" asp-append-version="true" />
}

<div class="student-verification-container">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mb-5">
            <h1 class="display-4">
                <i class="fas fa-graduation-cap text-primary me-3"></i>Student Verification
            </h1>
            <p class="lead">Verify your student status to unlock exclusive student discounts!</p>
        </div>

        @if (Model.IsVerified)
        {
            <div class="alert alert-success text-center">
                <i class="fas fa-check-circle fa-2x mb-3"></i>
                <h4>Student Verification Complete!</h4>
                <p>Your student status has been verified on <strong>@Model.User.StudentVerificationDate?.ToString("MMMM dd, yyyy")</strong></p>
                <p>Student ID: <strong>@Model.User.StudentId</strong></p>
                <p>Institution: <strong>@Model.User.InstitutionName</strong></p>
                <a asp-action="Index" class="btn btn-outline-success">
                    <i class="fas fa-arrow-left me-2"></i>Back to Deals
                </a>
            </div>
        }
        else
        {
            <!-- Student Benefits -->
            <div class="row mb-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0"><i class="fas fa-star me-2"></i>Student Benefits</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="benefit-item mb-3">
                                        <i class="fas fa-percentage text-primary fa-2x mb-2"></i>
                                        <h6>Student Discounts</h6>
                                        <p>Get up to 20% off on selected menu items</p>
                                    </div>
                                    <div class="benefit-item mb-3">
                                        <i class="fas fa-coffee text-success fa-2x mb-2"></i>
                                        <h6>Study Breaks</h6>
                                        <p>Special deals during exam periods</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="benefit-item mb-3">
                                        <i class="fas fa-users text-info fa-2x mb-2"></i>
                                        <h6>Group Orders</h6>
                                        <p>Extra discounts for group orders</p>
                                    </div>
                                    <div class="benefit-item mb-3">
                                        <i class="fas fa-calendar-alt text-warning fa-2x mb-2"></i>
                                        <h6>Back to School</h6>
                                        <p>Special promotions during academic year</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Verification Form -->
            <div class="row">
                <div class="col-lg-6 mx-auto">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Student Information</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="SubmitStudentVerification" method="post">
                                <div class="mb-3">
                                    <label asp-for="StudentId" class="form-label">Student ID *</label>
                                    <input asp-for="StudentId" class="form-control" placeholder="Enter your student ID" />
                                    <span asp-validation-for="StudentId" class="text-danger"></span>
                                    <small class="form-text text-muted">This should be your official student identification number from your institution.</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="InstitutionName" class="form-label">Institution Name *</label>
                                    <input asp-for="InstitutionName" class="form-control" placeholder="Enter your school/university name" />
                                    <span asp-validation-for="InstitutionName" class="text-danger"></span>
                                    <small class="form-text text-muted">Please provide the full name of your educational institution.</small>
                                </div>

                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Verification Process:</strong>
                                    <ul class="mb-0 mt-2">
                                        <li>Your student information will be verified within 24-48 hours</li>
                                        <li>You'll receive an email confirmation once verified</li>
                                        <li>Student discounts will be automatically applied to eligible items</li>
                                        <li>Your student status is valid for the duration of your studies</li>
                                    </ul>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i>Submit Verification
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to Deals
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supported Institutions -->
            <div class="row mt-5">
                <div class="col-lg-8 mx-auto">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5><i class="fas fa-university me-2"></i>Supported Institutions</h5>
                            <p class="text-muted">We work with major educational institutions across Malaysia</p>
                            <div class="institution-logos">
                                <div class="row">
                                    <div class="col-md-3 col-6 mb-3">
                                        <div class="institution-item">
                                            <i class="fas fa-university fa-2x text-primary"></i>
                                            <small>Universities</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6 mb-3">
                                        <div class="institution-item">
                                            <i class="fas fa-school fa-2x text-success"></i>
                                            <small>Colleges</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6 mb-3">
                                        <div class="institution-item">
                                            <i class="fas fa-graduation-cap fa-2x text-info"></i>
                                            <small>Polytechnics</small>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-6 mb-3">
                                        <div class="institution-item">
                                            <i class="fas fa-book fa-2x text-warning"></i>
                                            <small>Schools</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
} 