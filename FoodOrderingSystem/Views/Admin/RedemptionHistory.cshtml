@model IEnumerable<FoodOrderingSystem.Models.UserRedemption>

@{
    ViewData["Title"] = "Redemption History";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">Track all customer reward redemptions</p>
    </div>
</div>

<div class="container">
    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.Count()</h3>
                    <p class="mb-0">Total Redemptions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.Sum(r => r.PointsSpent)</h3>
                    <p class="mb-0">Points Redeemed</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.Count(r => !r.IsUsed)</h3>
                    <p class="mb-0">Unused Codes</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.Count(r => r.IsUsed)</h3>
                    <p class="mb-0">Used Codes</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="PointsRewards" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Rewards
            </a>
        </div>
    </div>

    <!-- Redemptions Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-history me-2"></i>All Redemptions
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Customer</th>
                                        <th>Reward</th>
                                        <th>Points Spent</th>
                                        <th>Redemption Code</th>
                                        <th>Status</th>
                                        <th>Used Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var redemption in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@redemption.RedeemedAt.ToString("MMM dd, yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@redemption.RedeemedAt.ToString("h:mm tt")</small>
                                            </td>
                                            <td>
                                                <strong>@(redemption.User?.UserName ?? "Unknown User")</strong>
                                                <br>
                                                <small class="text-muted">@(redemption.User?.Email ?? "No email")</small>
                                            </td>
                                            <td>
                                                <strong>@(redemption.PointsReward?.Title ?? "Unknown Reward")</strong>
                                                <br>
                                                <small class="text-muted">
                                                    @if (redemption.PointsReward?.DiscountAmount > 0)
                                                    {
                                                        <span class="text-success">RM@(redemption.PointsReward.DiscountAmount.ToString("F2")) OFF</span>
                                                    }
                                                    @if (redemption.PointsReward?.DiscountPercentage > 0)
                                                    {
                                                        <span class="text-success">@redemption.PointsReward.DiscountPercentage% OFF</span>
                                                    }
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-coins me-1"></i>@redemption.PointsSpent
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(redemption.RedemptionCode))
                                                {
                                                    <code class="user-select-all">@redemption.RedemptionCode</code>
                                                    <button type="button" class="btn btn-sm btn-outline-secondary ms-1" onclick="copyToClipboard('@redemption.RedemptionCode')" title="Copy Code">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No code</span>
                                                }
                                            </td>
                                            <td>
                                                @if (redemption.IsUsed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Used
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>Unused
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (redemption.UsedAt.HasValue)
                                                {
                                                    <small>@redemption.UsedAt.Value.ToString("MMM dd, yyyy h:mm tt")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Not used yet</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!redemption.IsUsed)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success" onclick="markAsUsed(@redemption.Id)" title="Mark as Used">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-check-circle"></i>
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-history fa-5x text-muted mb-3"></i>
                            <h4>No Redemptions Yet</h4>
                            <p class="text-muted">Customer reward redemptions will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-redemption.js" asp-append-version="true"></script>
    @Html.AntiForgeryToken()
}
