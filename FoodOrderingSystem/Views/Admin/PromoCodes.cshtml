@model IEnumerable<FoodOrderingSystem.Models.Deal>

@{
    ViewData["Title"] = "Promo Codes Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="promo-codes-container" style="min-height: 80vh; padding-bottom: 100px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="fas fa-tags me-2"></i>Promo Codes Management</h2>
                    <a asp-action="CreatePromoCode" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Create New Promo Code
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Promo Code</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Discount</th>
                                    <th>Status</th>
                                    <th>Usage</th>
                                    <th>Valid Period</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var deal in Model)
                                {
                                    <tr>
                                        <td>
                                            <code class="promo-code">@deal.PromoCode</code>
                                        </td>
                                        <td>
                                            <strong>@deal.Title</strong>
                                            @if (!string.IsNullOrEmpty(deal.Description))
                                            {
                                                <br><small class="text-muted">@(deal.Description.Length > 50 ? deal.Description.Substring(0, 50) + "..." : deal.Description)</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-@(deal.Type switch {
                                                DealType.FlashSale => "danger",
                                                DealType.BundleOffer => "warning",
                                                DealType.SeasonalDiscount => "info",
                                                DealType.PromoCode => "primary",
                                                DealType.LimitedTimeOffer => "secondary",
                                                DealType.StudentDiscount => "dark",
                                                _ => "light"
                                            })">
                                                @deal.Type
                                            </span>
                                        </td>
                                        <td>
                                            @if (deal.DiscountPercentage > 0)
                                            {
                                                <span class="text-success">@deal.DiscountPercentage% OFF</span>
                                            }
                                            else if (deal.DiscountedPrice > 0)
                                            {
                                                <span class="text-success">RM@deal.DiscountedPrice OFF</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No discount</span>
                                            }
                                        </td>
                                        <td>
                                            @if (deal.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            @if (deal.MaxUses == -1)
                                            {
                                                <span class="text-muted">Unlimited per account</span>
                                            }
                                            else
                                            {
                                                <span>@deal.MaxUses use(s) per account</span>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                <strong>Start:</strong> @deal.StartDate.ToString("MMM dd, yyyy")<br>
                                                <strong>End:</strong> @(deal.EndDate?.ToString("MMM dd, yyyy") ?? "Never")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditPromoCode" asp-route-id="@deal.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                
                                                <form asp-action="TogglePromoCodeStatus" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@deal.Id" />
                                                    <button type="submit" class="btn btn-sm @(deal.IsActive ? "btn-outline-warning" : "btn-outline-success")" title="@(deal.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="fas fa-@(deal.IsActive ? "pause" : "play")"></i>
                                                    </button>
                                                </form>
                                                
                                                <form asp-action="DeletePromoCode" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this promo code? This action cannot be undone.');">
                                                    <input type="hidden" name="id" value="@deal.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-tags fa-5x text-muted mb-4"></i>
                    <h3 class="text-muted">No promo codes found</h3>
                    <p class="text-muted mb-4">Create your first promo code to start offering discounts to customers!</p>
                    <a asp-action="CreatePromoCode" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create First Promo Code
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
