@{
    ViewData["Title"] = "Database Test";
}

<div class="container mt-4">
    <h2>Database and Admin User Test</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Database Status</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total Users:</strong> @ViewBag.TotalUsers</p>
                    <p><strong>Total Menu Items:</strong> @ViewBag.TotalMenuItems</p>
                    <p><strong>Total Categories:</strong> @ViewBag.TotalCategories</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Admin User Status</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AdminByEmail != null)
                    {
                        <p><strong>Admin by Email:</strong> Found</p>
                        <p><strong>Username:</strong> @ViewBag.AdminByEmail.UserName</p>
                        <p><strong>Email:</strong> @ViewBag.AdminByEmail.Email</p>
                        <p><strong>Has Admin Role:</strong> @ViewBag.IsInAdminRole</p>
                    }
                    else
                    {
                        <p><strong>Admin by Email:</strong> Not Found</p>
                    }
                    
                    @if (ViewBag.AdminByUsername != null)
                    {
                        <p><strong>Admin by Username:</strong> Found</p>
                        <p><strong>Username:</strong> @ViewBag.AdminByUsername.UserName</p>
                        <p><strong>Email:</strong> @ViewBag.AdminByUsername.Email</p>
                        <p><strong>Has Admin Role:</strong> @ViewBag.IsInAdminRoleByUsername</p>
                    }
                    else
                    {
                        <p><strong>Admin by Username:</strong> Not Found</p>
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Test Admin Login</h5>
                </div>
                <div class="card-body">
                    <form id="testLoginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username or Email</label>
                            <input type="text" class="form-control" id="username" name="username" value="admin" />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" value="Password123!" />
                        </div>
                        <button type="submit" class="btn btn-primary">Test Login</button>
                    </form>
                    <div id="loginResult" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#testLoginForm').on('submit', function(e) {
                e.preventDefault();
                
                $.ajax({
                    url: '@Url.Action("TestLogin", "Test")',
                    type: 'POST',
                    data: {
                        username: $('#username').val(),
                        password: $('#password').val()
                    },
                    success: function(result) {
                        var html = '<div class="alert alert-info">';
                        html += '<strong>Test Results:</strong><br>';
                        html += 'User Exists: ' + result.userExists + '<br>';
                        if (result.userExists) {
                            html += 'Valid Password: ' + result.validPassword + '<br>';
                            html += 'Is Admin: ' + result.isAdmin + '<br>';
                            html += 'User ID: ' + result.userId + '<br>';
                            html += 'Username: ' + result.userName + '<br>';
                            html += 'Email: ' + result.email;
                        }
                        html += '</div>';
                        $('#loginResult').html(html);
                    },
                    error: function() {
                        $('#loginResult').html('<div class="alert alert-danger">Error testing login</div>');
                    }
                });
            });
        });
    </script>
} 