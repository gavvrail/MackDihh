<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MackDihh</title>
    <link rel="icon" href="~/favicon.ico?v=2" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/food-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodOrderingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css">
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 12px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            transition: transform 0.3s ease;
        }
        
        .notification-badge:hover {
            transform: scale(1.1);
        }
        
        .support-chat-icon {
            position: relative;
        }
        
        .admin-support-panel {
            padding: 0;
        }
        
        .admin-support-content {
            padding: 20px;
        }
        
        .admin-support-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #e9ecef;
        }
        
        .admin-support-icon {
            width: 50px;
            height: 50px;
            background: #007bff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
        }
        
        .admin-support-icon i {
            color: white;
            font-size: 20px;
        }
        
        .admin-support-title h6 {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .admin-support-stats {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }
        
        .stat-item {
            text-align: center;
        }
        
        .stat-number {
            font-size: 24px;
            font-weight: bold;
            color: #007bff;
            line-height: 1;
        }
        
        .stat-label {
            font-size: 12px;
            color: #6c757d;
            margin-top: 5px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .admin-support-actions {
            margin-bottom: 15px;
        }
        
        .admin-support-actions .btn {
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .admin-support-actions .btn-primary {
            background: #007bff;
            border: none;
            box-shadow: 0 2px 4px rgba(0, 123, 255, 0.3);
        }
        
        .admin-support-actions .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.4);
        }
        
        .admin-support-actions .btn-outline-secondary {
            border-color: #dee2e6;
            color: #6c757d;
        }
        
        .admin-support-actions .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            border-color: #adb5bd;
            color: #495057;
        }
        
        .admin-support-footer {
            text-align: center;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }
        
        .support-quick-actions {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            justify-content: center;
        }
        
        .support-quick-actions .btn {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        /* Global Custom Modal Styles */
        .custom-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(0, 0, 0, 0.5);
            margin: 0;
            padding: 0;
        }
        
        .custom-modal-backdrop {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: transparent;
            cursor: pointer;
        }
        
        .custom-modal-content {
            position: relative;
            background: white;
            border-radius: 8px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            max-width: 80vw;
            max-height: 90vh;
            width: auto;
            height: auto;
            display: flex;
            flex-direction: column;
            z-index: 10000;
            margin: auto;
        }
        
        .custom-modal-header {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .custom-modal-title {
            margin: 0;
            font-size: 1.25rem;
        }
        
        .custom-close-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            color: #6c757d;
            border-radius: 4px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 32px;
            min-height: 32px;
        }
        
        .custom-close-btn:hover {
            color: #000;
            background-color: #f8f9fa;
        }
        
        .custom-close-btn:focus {
            outline: 2px solid #007bff;
            outline-offset: 2px;
        }
        
        .custom-modal-body {
            padding: 1rem;
            overflow-y: auto;
            flex: 1;
        }
        
        .custom-modal-footer {
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            display: flex;
            justify-content: flex-end;
            gap: 0.5rem;
        }
        
        /* Image Modal Specific Styles */
        .custom-modal-image .custom-modal-content {
            max-width: 80vw;
            max-height: 90vh;
            width: auto;
            height: auto;
        }
        
        .custom-modal-image .custom-modal-body {
            padding: 0;
            text-align: center;
            max-height: 70vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .custom-modal-image .custom-modal-body img {
            max-width: 100%;
            max-height: 70vh;
            object-fit: contain;
            display: block;
        }

        /* Modal Content Improvements */
        .modal-content {
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            border-radius: 12px;
            overflow: hidden;
        }

        .modal-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }

        .modal-header .btn-close {
            filter: invert(1);
            opacity: 0.8;
        }

        .modal-header .btn-close:hover {
            opacity: 1;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid #e9ecef;
            padding: 1rem 1.5rem;
            background-color: #f8f9fa;
        }

        /* Image Modal Specific Styles */
        .modal-lg {
            max-width: 60vw;
            max-height: 80vh;
        }

        .modal-lg .modal-body {
            padding: 0;
            text-align: center;
            max-height: 70vh;
            overflow: hidden;
        }

        .modal-lg .modal-body img {
            max-width: 100%;
            max-height: 70vh;
            object-fit: contain;
            width: auto;
            height: auto;
        }

        /* Responsive modal sizing */
        @@media (max-width: 768px) {
            .modal-lg {
                max-width: 95vw;
                max-height: 90vh;
            }
            
            .modal-lg .modal-body {
                max-height: 80vh;
            }
            
            .modal-lg .modal-body img {
                max-height: 80vh;
            }
        }

        /* Prevent body scroll when modal is open */
        body.modal-open {
            overflow: hidden;
        }

        /* Smooth modal transitions */
        .modal.fade .modal-dialog {
            transition: transform 0.3s ease-out;
            transform: translate(0, -50px);
        }

        .modal.show .modal-dialog {
            transform: none;
        }

        /* Custom modal backdrop for better UX */
        .modal-backdrop.fade {
            opacity: 0;
        }

        .modal-backdrop.show {
            opacity: 0.4;
        }
    </style>
</head>
