@model int

<li class="nav-item">
    <a class="nav-link text-dark cart-icon-container" asp-area="" asp-controller="Cart" asp-action="Index">
        <i class="fas fa-shopping-cart"></i>
        @if (Model > 0)
        {
            <span class="cart-badge" id="cart-count">@Model</span>
        }
        else
        {
            <span class="cart-badge" id="cart-count" style="display: none;">0</span>
        }
    </a>
</li>
