@model FoodOrderingSystem.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">View category details and associated menu items.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Category Information</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Category ID:</dt>
                                <dd class="col-sm-8">@Model.Id</dd>
                                
                                <dt class="col-sm-4">Category Name:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.Name</strong>
                                </dd>
                                
                                <dt class="col-sm-4">Menu Items:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-primary fs-6">@Model.MenuItems.Count</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.MenuItems.Any())
                    {
                        <hr>
                        <h5 class="mb-3">Menu Items in this Category</h5>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle admin-table">
                                <thead>
                                    <tr>
                                        <th>Item Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var menuItem in Model.MenuItems)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@menuItem.Name</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(menuItem.Description))
                                                {
                                                    <span>@menuItem.Description</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No description</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">RM@(menuItem.Price.ToString("F2"))</span>
                                            </td>
                                            <td>
                                                @if (menuItem.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Available</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Unavailable</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <hr>
                        <div class="text-center py-4">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No menu items in this category</h5>
                            <p class="text-muted">This category doesn't have any menu items yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 