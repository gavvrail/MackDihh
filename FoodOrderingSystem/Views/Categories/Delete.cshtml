@model FoodOrderingSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">Remove a category from the system.</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Delete Category: @Model.Name</h5>
                </div>
                <div class="card-body">
                    @if (Model.MenuItems.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Warning:</strong> This category contains @Model.MenuItems.Count menu item(s). 
                            You cannot delete a category that has menu items. Please reassign or delete the menu items first.
                        </div>
                        
                        <h6>Menu Items in this Category:</h6>
                        <ul class="list-group mb-3">
                            @foreach (var menuItem in Model.MenuItems)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@menuItem.Name</span>
                                    <span class="badge bg-primary rounded-pill">RM@(menuItem.Price.ToString("F2"))</span>
                                </li>
                            }
                        </ul>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button class="btn btn-danger" disabled>
                                <i class="fas fa-trash me-2"></i>Cannot Delete
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Are you sure you want to delete this category?</strong>
                            <br>
                            This action cannot be undone.
                        </div>
                        
                        <dl class="row">
                            <dt class="col-sm-4">Category ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>
                            
                            <dt class="col-sm-4">Category Name:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.Name</strong>
                            </dd>
                            
                            <dt class="col-sm-4">Menu Items:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">0 items</span>
                            </dd>
                        </dl>
                        
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Category
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 