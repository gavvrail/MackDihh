@section Styles {
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Home Page";
}

<!-- Remove the default container to allow full-width sections -->
<div class="container-fluid p-0">

    <!-- Hero Section -->
    <header class="hero-section text-white text-center">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1 class="display-3 font-weight-bold">Some call it fast food, We call it love at first bite.</h1>
            <p class="lead my-4">Ready to make it official? Order your cravings now.</p>
            <a href="../Menu" class="btn btn-warning btn-lg hero-button">Order Now</a>
        </div>
    </header>

    <!-- Happy Meal Announcement Section -->
    <section class="announcement-section">
        <div class="container">
            <h2 class="text-center mb-5 section-title">Announcement</h2>
            <div class="row align-items-center">
                <div class="col-lg-6 text-center">
                    <img src="@Url.Content("~/images/mackdihh_meal.jpeg")" class="img-fluid rounded-3 shadow-lg" alt="Happy Meal">
                </div>
                <div class="col-lg-6 text-white text-center text-lg-start mt-4 mt-lg-0">
                    <h2 class="display-5 fw-bolder">The MackDihh Meal is Here!</h2>
                    <p class="lead">The newly released MackDihh Meal has arrived! Experience a taste of joy with our latest creation, featuring a delicious main, a side of fun, and a surprise toy. Available for a limited time only!</p>
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-lg fw-bold announcement-btn">Order Now</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Items Section -->
    <section class="container mt-5">
        <h2 class="text-center mb-4 section-title">Our Featured Items</h2>
        <div class="row text-center">
            <!-- Featured Item 1 -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card product-card h-100 d-flex flex-column">
                                            <img src="@Url.Content("~/images/mackfloaty.png")" class="card-img-top" alt="Mack Floaty" style="height: 200px; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mack Floaty</h5>
                        <p class="card-text">Cool off with creamy vanilla ice cream in an ice-cold Coke.</p>
                        <div class="mt-auto">
                            <p class="font-weight-bold mb-2">RM6.69</p>
                            <!-- This link now goes to the Menu page -->
                            <a asp-controller="Menu" asp-action="Index" class="btn btn-danger">Add to Order</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Featured Item 2 -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card product-card h-100 d-flex flex-column">
                                            <img src="@Url.Content("~/images/7.png")" class="card-img-top" alt="Mack Double Drippy Cheese Melt Burger" style="height: 200px; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mack Double Drippy Cheese Melt Burger</h5>
                        <p class="card-text">For cheese lovers who want it big and drippy.</p>
                        <div class="mt-auto">
                            <p class="font-weight-bold mb-2">RM14.69</p>
                            <!-- This link now goes to the Menu page -->
                            <a asp-controller="Menu" asp-action="Index" class="btn btn-danger">Add to Order</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Featured Item 3 -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card product-card h-100 d-flex flex-column">
                                            <img src="@Url.Content("~/images/freakysundae.png")" class="card-img-top" alt="Freaky Sundae" style="height: 200px; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Freaky Sundae</h5>
                        <p class="card-text">Vanilla ice cream with chocolate crumbles.</p>
                        <div class="mt-auto">
                            <p class="font-weight-bold mb-2">RM6.69</p>
                            <!-- This link now goes to the Menu page -->
                            <a asp-controller="Menu" asp-action="Index" class="btn btn-danger">Add to Order</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Featured Item 4 -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card product-card h-100 d-flex flex-column">
                                            <img src="@Url.Content("~/images/mackultibfpancake.png")" class="card-img-top" alt="Mack Ulti-Breakfast Pancake" style="height: 200px; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Mack Ulti-Breakfast Pancake</h5>
                        <p class="card-text">Pancakes acts as buns and in between has bacon eggs and a beef patty</p>
                        <div class="mt-auto">
                            <p class="font-weight-bold mb-2">RM17.69</p>
                            <!-- This link now goes to the Menu page -->
                            <a asp-controller="Menu" asp-action="Index" class="btn btn-danger">Add to Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Promotions Section -->
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4 section-title">Deals & Promotions</h2>
            <div class="row">
                <!-- Promotion 1 -->
                <div class="col-md-6 mb-4">
                    <div class="card promo-card">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="@Url.Content("~/images/5.png")" class="card-img" alt="Deal" style="height: 200px; object-fit: cover;">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">Free Fries Friday</h5>
                                    <p class="card-text">Get a FREE medium Fries with any purchase of RM1 or more, only on Fridays.</p>
                                    <a href="#" class="btn btn-outline-danger">Claim Deal</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Promotion 2 -->
                <div class="col-md-6 mb-4">
                    <div class="card promo-card">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="@Url.Content("~/images/6.png")" class="card-img" alt="New Item" style="height: 200px; object-fit: cover;">
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h5 class="card-title">Try the new Crispy Chicken</h5>
                                    <p class="card-text">Juicy, crispy, and tender. Our new chicken sandwich is here to blow you away.</p>
                                    <a href="#" class="btn btn-outline-danger">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="why-choose-us py-5">
        <div class="container">
            <h2 class="text-center mb-5 section-title">Why Choose MackDihh?</h2>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-clock fa-3x text-primary"></i>
                        </div>
                        <h5>Fast Delivery</h5>
                        <p>Get your food delivered in 30-45 minutes, guaranteed!</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-leaf fa-3x text-success"></i>
                        </div>
                        <h5>Fresh Ingredients</h5>
                        <p>We use only the freshest ingredients sourced locally.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-star fa-3x text-warning"></i>
                        </div>
                        <h5>Quality Assured</h5>
                        <p>Every dish is prepared with care and attention to detail.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="feature-card text-center">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-mobile-alt fa-3x text-info"></i>
                        </div>
                        <h5>Easy Ordering</h5>
                        <p>Order online anytime, anywhere with our user-friendly platform.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Customer Reviews Section -->
    <section class="reviews-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 section-title">What Our Customers Say</h2>
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="review-card">
                        <div class="review-stars mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="review-text">"I was impressed with how quickly my order arrived. The delivery rider was polite and friendly. Great service all around!"</p>
                        <div class="review-author">
                            <strong>Ben Dover</strong>
                            <small class="text-muted d-block">Regular Customer</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <div class="review-card">
                        <div class="review-stars mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="review-text">"Had a late-night craving for fries and MackDihh delivered! The fries arrived hot and crispy, even at 11 PM. You guys are heroes."</p>
                        <div class="review-author">
                            <strong>Nguyễn Phee Diddy</strong>
                            <small class="text-muted d-block">Tourist</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-4">
                    <div class="review-card">
                        <div class="review-stars mb-3">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                        <p class="review-text">"I ordered 1,000 of these burgers for my latest video and they were INSANE! The delivery was faster than Chandler can win a challenge. 10/10 would order from this app again!"</p>
                        <div class="review-author">
                            <strong>MrBeast</strong>
                            <small class="text-muted d-block">YouTuber</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section py-5">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Experience the Best?</h2>
            <p class="lead mb-4">Join thousands of satisfied customers who choose MackDihh for their daily cravings.</p>
            <div class="cta-buttons">
                <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg me-3">Order Now</a>
                <a asp-controller="Deals" asp-action="Index" class="btn btn-outline-primary btn-lg">View Deals</a>
            </div>
        </div>
    </section>

</div>
