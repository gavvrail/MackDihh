@{
    ViewData["Title"] = "Contact Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/contact.css?v=@DateTime.Now.Ticks" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/map-config.js" asp-append-version="true"></script>
    <script src="~/js/contact.js" asp-append-version="true"></script>
}

<!-- Hero Section -->
<div class="contact-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">Get in Touch</h1>
                <p class="lead text-white mb-4">We'd love to hear from you! Whether you have a question, feedback, or just want to say hello, we're here to help.</p>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-envelope-open-text fa-5x text-white"></i>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    <div class="row">
        <!-- Contact Information -->
        <div class="col-lg-4 mb-5">
            <h2 class="section-title mb-4">Contact Information</h2>
            
            <div class="contact-info-item mb-4" style="display: flex !important; align-items: flex-start !important;">
                <div class="contact-icon" style="flex-shrink: 0 !important; margin-right: 1.5rem !important;">
                    <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                </div>
                <div class="contact-details" style="flex: 1 !important; min-width: 0 !important;">
                    <h5>Address</h5>
                    <p class="contact-address">Kota Kinabalu, Sabah</p>
                </div>
            </div>

            <div class="contact-info-item mb-4">
                <div class="contact-icon">
                    <i class="fas fa-phone fa-2x text-success"></i>
                </div>
                <div class="contact-details">
                    <h5>Phone</h5>
                    <p>+60 16 123 4567<br>+60 16 123 7890</p>
                </div>
            </div>

            <div class="contact-info-item mb-4">
                <div class="contact-icon">
                    <i class="fas fa-envelope fa-2x text-warning"></i>
                </div>
                <div class="contact-details">
                    <h5>Email</h5>
                    <p>info@mackdihh.com<br>support@mackdihh.com</p>
                </div>
            </div>

            <div class="contact-info-item mb-4">
                <div class="contact-icon">
                    <i class="fas fa-clock fa-2x text-info"></i>
                </div>
                <div class="contact-details">
                    <h5>Opening Hours</h5>
                    <p>Monday - Friday: 7:00 AM - 10:00 PM<br>Saturday - Sunday: 8:00 AM - 11:00 PM</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-lg-8">
            <div class="contact-form-card">
                <h2 class="section-title mb-4">Send us a Message</h2>
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input type="text" class="form-control name-input" id="firstName" 
                                   pattern="[A-Za-z\s]+" 
                                   title="First name should only contain letters and spaces"
                                   placeholder="Enter your first name" required>
                            <div class="invalid-feedback">First name should only contain letters and spaces</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control name-input" id="lastName" 
                                   pattern="[A-Za-z\s]+" 
                                   title="Last name should only contain letters and spaces"
                                   placeholder="Enter your last name" required>
                            <div class="invalid-feedback">Last name should only contain letters and spaces</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" 
                               pattern="[0-9+\-\s\(\)]{10,11}" 
                               title="Phone number must be between 10 and 11 digits"
                               placeholder="Enter your phone number (optional)">
                        <small class="form-text text-muted">Enter a valid Malaysian phone number (10-11 digits)</small>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <select class="form-select" id="subject" required>
                            <option value="">Choose a subject</option>
                            <option value="general">General Inquiry</option>
                            <option value="order">Order Issue</option>
                            <option value="feedback">Feedback</option>
                            <option value="complaint">Complaint</option>
                            <option value="partnership">Partnership</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="5" placeholder="Tell us how we can help you..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="section-title text-center mb-4">Find Us</h2>
            <div class="map-container">
                <div class="google-map-wrapper">
                    <div class="map-loading" id="mapLoading">
                        <i class="fas fa-spinner fa-spin fa-2x text-primary mb-3"></i>
                        <p>Loading map...</p>
                    </div>
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3972.1234567890123!2d116.0755!3d5.9804!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x323b6b4343555b5b%3A0x1234567890123456!2sJalan%20Gaya%2C%20Kota%20Kinabalu%2C%20Sabah%2C%20Malaysia!5e0!3m2!1sen!2smy!4v1234567890123"
                        width="100%" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        class="google-map"
                        title="MackDihh Restaurant Location">
                    </iframe>
                </div>
                <div class="map-info mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="map-info-item">
                                <i class="fas fa-map-marker-alt text-primary"></i>
                                <div>
                                    <h6 class="mb-1">Our Location</h6>
                                    <p class="mb-0">Jalan Alamesra, Kota Kinabalu, Sabah</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="map-info-item">
                                <i class="fas fa-directions text-success"></i>
                                <div>
                                    <h6 class="mb-1">Get Directions</h6>
                                    <a href="https://maps.google.com/maps?q=123+Jalan+Gaya+Kota+Kinabalu+Sabah+Malaysia" target="_blank" rel="noopener noreferrer" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-external-link-alt me-1"></i>Open in Google Maps
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FAQ Preview -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="faq-preview text-center">
                <h3>Frequently Asked Questions</h3>
                <p class="lead mb-4">Can't find what you're looking for? Check out our FAQ section for quick answers to common questions.</p>
                <a asp-controller="Home" asp-action="FAQ" class="btn btn-outline-primary">View FAQ</a>
            </div>
        </div>
    </div>
</div> 