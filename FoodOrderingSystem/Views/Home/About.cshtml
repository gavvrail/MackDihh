@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/video-fallback.js" asp-append-version="true"></script>
}

<!-- Hero Section -->
<div class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">Our Story</h1>
                <p class="lead text-white mb-4">From humble beginnings to becoming your favorite food destination, MackDihh has been serving smiles since 2020.</p>
            </div>
            <div class="col-lg-6 text-center">
                <img src="@Url.Content("~/images/logo.png")" alt="MackDihh Logo" class="img-fluid about-logo">
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="section-title mb-4">Our Mission</h2>
            <p class="lead">To provide delicious, high-quality food that brings joy to every customer, while maintaining the highest standards of service and cleanliness.</p>
        </div>
    </div>

    <!-- Values Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title text-center mb-5">Our Values</h2>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="value-card text-center">
                <div class="value-icon mb-3">
                    <i class="fas fa-heart fa-3x text-danger"></i>
                </div>
                <h4>Quality</h4>
                <p>We use only the finest ingredients to ensure every bite is a memorable experience.</p>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="value-card text-center">
                <div class="value-icon mb-3">
                    <i class="fas fa-clock fa-3x text-warning"></i>
                </div>
                <h4>Speed</h4>
                <p>Fast service without compromising on quality. Your time is valuable to us.</p>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="value-card text-center">
                <div class="value-icon mb-3">
                    <i class="fas fa-smile fa-3x text-success"></i>
                </div>
                <h4>Service</h4>
                <p>Every customer interaction is an opportunity to create a positive experience.</p>
            </div>
        </div>
    </div>

    <!-- Timeline Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title text-center mb-5">Our Journey</h2>
        </div>
        <div class="col-lg-10 mx-auto">
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5>2020 - The Beginning</h5>
                        <p>MackDihh started as a small family restaurant in Kota Kinabalu, serving traditional favorites with a modern twist.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5>2022 - Digital Transformation</h5>
                        <p>Launched our online ordering platform to serve customers more conveniently and efficiently.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5>2024 - Expansion</h5>
                        <p>Expanded our menu and delivery network to reach more customers across Sabah.</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker"></div>
                    <div class="timeline-content">
                        <h5>2025 - Innovation</h5>
                        <p>Continuing to innovate with new menu items and enhanced customer experiences.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Music Video Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title text-center mb-5">MackDihh Official Music Video</h2>
        </div>
        <div class="col-lg-8 mx-auto">
            <div class="music-video-container text-center">
                                <div class="video-wrapper">
                    <!-- YouTube Embed (for production) -->
                    <iframe src="https://www.youtube.com/embed/1YsZHLNTTl8"
                            title="MackDihh - That's The Vibe (Official Music Video)" 
                            frameborder="0" 
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                            allowfullscreen>
                    </iframe>
                    
                    <!-- Fallback for localhost development -->
                    <div class="video-placeholder" style="display: none;">
                        <div class="placeholder-content">
                            <i class="fas fa-play-circle fa-4x text-muted mb-3"></i>
                            <h5>MackDihh - That's The Vibe</h5>
                            <p class="text-muted">Official Music Video</p>
                            <a href="https://www.youtube.com/watch?v=1YsZHLNTTl8" 
                               target="_blank" 
                               class="btn btn-primary mt-3">
                                <i class="fab fa-youtube me-2"></i>Watch on YouTube
                            </a>
                        </div>
                    </div>
                </div>
                <div class="video-description mt-4">
                    <h4 class="mb-3">MackDihh - That's The Vibe (Official Music Video)</h4>
                    <p class="lead">Listen to our official theme song that captures the spirit and energy of MackDihh. This original composition celebrates our passion for great food and amazing service.</p>
                    <div class="video-meta mt-3">
                        <span class="badge bg-primary me-2">Original Music</span>
                        <span class="badge bg-success me-2">Official Theme</span>
                        <span class="badge bg-warning">MackDihh Brand</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="section-title text-center mb-5">Meet Our Team</h2>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="team-card text-center">
                <div class="team-avatar mb-3">
                    <i class="fas fa-user-circle fa-4x text-primary"></i>
                </div>
                <h5>Stanley Thien</h5>
                <p class="text-muted">CEO</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="team-card text-center">
                <div class="team-avatar mb-3">
                    <i class="fas fa-user-circle fa-4x text-success"></i>
                </div>
                <h5>Darren Yap</h5>
                <p class="text-muted">Lead Developer</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="team-card text-center">
                <div class="team-avatar mb-3">
                    <i class="fas fa-user-circle fa-4x text-warning"></i>
                </div>
                <h5>Gabriel Tsen</h5>
                <p class="text-muted">Operations Manager</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="team-card text-center">
                <div class="team-avatar mb-3">
                    <i class="fas fa-user-circle fa-4x text-info"></i>
                </div>
                <h5>Jess Ma</h5>
                <p class="text-muted">Graphic Designer</p>
            </div>
        </div>
    </div>
</div> 