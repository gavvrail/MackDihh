@model FoodOrderingSystem.Models.MenuItem

@{
    ViewData["Title"] = "Create New Item";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/image-upload.css" asp-append-version="true" />
}

<div class="admin-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">Add a new item to the database.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Image Upload Section -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Item Image</label>
                            <div class="menu-item-image-section" data-menu-item-id="0">
                                <div class="menu-item-image">
                                    <img src="/images/default-menu-item.png" alt="Menu Item Image" 
                                         onerror="this.src='/images/default-menu-item.png';">
                                </div>
                            </div>
                            <input asp-for="ImageUrl" type="hidden" id="imageUrlInput" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Drag and drop an image or click to browse. You can crop the image after selection.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">Price (RM)</label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PointsPerItem" class="form-label fw-bold">Points Earned Per Item</label>
                                <input asp-for="PointsPerItem" class="form-control" type="number" min="0" max="100" />
                                <span asp-validation-for="PointsPerItem" class="text-danger"></span>
                                <small class="form-text text-muted">Number of points customers earn when they order this item</small>
                            </div>
                        </div>

                        <!-- Hidden fields for properties with default values -->
                        <input type="hidden" asp-for="IsAvailable" value="true" />
                        <input type="hidden" asp-for="IsFeatured" value="false" />
                        <input type="hidden" asp-for="PreparationTimeMinutes" value="15" />

                        <hr class="my-4" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <input type="submit" value="Create" class="btn btn-create-new" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/image-upload.js" asp-append-version="true"></script>
    <script>
        // Initialize menu item image uploader for new items
        document.addEventListener('DOMContentLoaded', function() {
            const imageUploader = new MenuItemImageUploader(0, {
                target: '.menu-item-image-section'
            });
            
            // Override the updateProfileImage method to update the hidden input
            imageUploader.updateProfileImage = function(imagePath) {
                document.getElementById('imageUrlInput').value = imagePath;
                const menuItemImage = document.querySelector('.menu-item-image img');
                if (menuItemImage) {
                    menuItemImage.src = imagePath + '?t=' + new Date().getTime();
                }
            };
        });
    </script>
}
