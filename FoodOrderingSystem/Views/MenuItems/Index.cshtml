@model IEnumerable<FoodOrderingSystem.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
}

<div class="admin-header">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p class="lead mb-0">Add, edit, or remove items from the customer menu.</p>
    </div>
</div>

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-create-new shadow-sm">
            <i class="fas fa-plus me-2"></i>Create New Item
        </a>
    </p>
    <form asp-action="BatchDelete" method="post" id="batchDeleteForm">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="mb-2">
                    <button type="submit" class="btn btn-danger" id="deleteSelectedBtn" disabled>Delete Selected</button>
                </div>
                <table class="table table-hover align-middle admin-table">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="selectAll" />
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                Price (RM)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedIds" value="@item.Id" class="row-checkbox" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @item.Price.ToString("F2")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary btn-action">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary btn-action">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger btn-action">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Select All functionality
        document.getElementById('selectAll').addEventListener('change', function() {
            const checked = this.checked;
            document.querySelectorAll('.row-checkbox').forEach(cb => {
                cb.checked = checked;
            });
            toggleDeleteButton();
        });
        // Enable/disable Delete Selected button
        document.querySelectorAll('.row-checkbox').forEach(cb => {
            cb.addEventListener('change', toggleDeleteButton);
        });
        function toggleDeleteButton() {
            const anyChecked = Array.from(document.querySelectorAll('.row-checkbox')).some(cb => cb.checked);
            document.getElementById('deleteSelectedBtn').disabled = !anyChecked;
        }
        // Confirmation dialog for batch delete
        document.getElementById('batchDeleteForm').addEventListener('submit', function(e) {
            const checkedCount = document.querySelectorAll('.row-checkbox:checked').length;
            if (checkedCount === 0) {
                e.preventDefault();
                return false;
            }
            if (!confirm('Are you sure you want to delete the selected menu items? This action cannot be undone.')) {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
