@model FoodOrderingSystem.ViewModels.MenuViewModel

@{
    ViewData["Title"] = "Our Delicious Menu";
}

@Html.AntiForgeryToken()

@section Styles {
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/wishlist-popup.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/menu.js" asp-append-version="true"></script>
    <script src="~/js/wishlist.js" asp-append-version="true"></script>
}

<div class="menu-full-width">
    <div class="container-fluid">
        <!-- Top Search and Sort Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="search-sort-container">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="search-box">
                                <input type="text" id="menuSearch" class="form-control" placeholder="Search for delicious food...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="sort-box">
                                <form method="get" id="sortForm" class="d-flex align-items-center">
                                    <label for="sortSelect" class="me-2 mb-0">Sort by:</label>
                                    <select name="sortBy" id="sortSelect" class="form-select" onchange="this.form.submit()">
                                        @foreach (var option in Model.SortOptions)
                                        {
                                            if (option.Value == Model.SelectedSortBy)
                                            {
                                                <option value="@option.Value" selected>@option.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@option.Value">@option.Text</option>
                                            }
                                        }
                                    </select>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row gx-4">
            <!-- Left Sidebar: Category Navigation -->
            <div class="col-lg-3">
                <!-- Mobile Toggle Button -->
                <div class="d-lg-none mb-3">
                    <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#menuSidebar" aria-expanded="false" aria-controls="menuSidebar">
                        <i class="fas fa-filter me-2"></i>Show Categories
                    </button>
                </div>
                
                <!-- Sidebar Content -->
                <aside class="menu-sidebar sticky-top collapse d-lg-block" id="menuSidebar">
                    <!-- Quick Navigation -->
                    <nav class="category-nav">
                        <h6>Quick Navigation</h6>
                        <ul class="nav flex-column">
                            @foreach (var category in Model.Categories)
                            {
                                var categoryItemCount = Model.MenuItems.Count(item => item.Category?.Id == category.Id);
                                <li class="nav-item">
                                    <a class="nav-link quick-nav-link" href="#category-@category.Id" data-category="@category.Id" data-count="@categoryItemCount">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </aside>
            </div>

            <!-- Right Content: Menu Items by Category -->
            <div class="col-lg-9">
                <main class="menu-content">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1>MackDihh Menu</h1>
                        <div class="results-info">
                            <span class="text-muted">@Model.MenuItems.Count delicious item@(Model.MenuItems.Count != 1 ? "s" : "") found</span>
                        </div>
                    </div>

                    @if (Model.MenuItems.Any())
                    {
                        @foreach (var category in Model.Categories)
                        {
                            var categoryItems = Model.MenuItems.Where(item => item.Category?.Id == category.Id).ToList();
                            if (categoryItems.Any())
                            {
                                <div class="category-section mb-5" id="category-@category.Id">
                                    <div class="category-header mb-4">
                                        <h2 class="category-title">@category.Name</h2>
                                        <hr class="category-divider">
                                    </div>
                                    
                                    <div class="row">
                                        @foreach (var item in categoryItems)
                                        {
                                            <div class="col-lg-6 mb-4 menu-item-card" data-name="@item.Name.ToLower() @item.Description.ToLower()" data-category="@category.Id">
                                                <div class="card food-menu-card h-100">
                                                    <div class="row g-0">
                                                        <div class="col-md-8">
                                                            <div class="card-body d-flex flex-column">
                                                                <h5 class="card-title">@item.Name</h5>
                                                                <div class="description-container flex-grow-1">
                                                                    <p class="card-text text-muted description-text" data-full-text="@item.Description">
                                                                        @(item.Description.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)
                                                                    </p>
                                                                    @if (item.Description.Length > 80)
                                                                    {
                                                                        <button class="btn btn-link btn-sm p-0 text-primary view-more-btn" style="text-decoration: none;">
                                                                            View More
                                                                        </button>
                                                                    }
                                                                </div>
                                                                <div class="price-section mt-auto">
                                                                    <p class="card-text fw-bold price-text text-food-primary">RM@(item.Price.ToString("F2"))</p>
                                                                    @if (item.PointsPerItem > 0)
                                                                    {
                                                                        <p class="card-text text-success small">
                                                                            <i class="fas fa-star me-1"></i>Earn @item.PointsPerItem point@(item.PointsPerItem > 1 ? "s" : "") per item
                                                                        </p>
                                                                    }
                                                                    @if (item.AverageRating > 0)
                                                                    {
                                                                        <div class="rating-info">
                                                                            <span class="text-warning">
                                                                                @for (int i = 1; i <= 5; i++)
                                                                                {
                                                                                    if (i <= item.AverageRating)
                                                                                    {
                                                                                        <i class="fas fa-star"></i>
                                                                                    }
                                                                                    else if (i - 0.5m <= item.AverageRating)
                                                                                    {
                                                                                        <i class="fas fa-star-half-alt"></i>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <i class="far fa-star"></i>
                                                                                    }
                                                                                }
                                                                            </span>
                                                                            <span class="text-muted small ms-1">(@item.TotalReviews)</span>
                                                                        </div>
                                                                        <div class="mt-2">
                                                                            <a asp-controller="Reviews" asp-action="Product" asp-route-menuItemId="@item.Id" class="btn btn-sm btn-outline-primary">
                                                                                <i class="fas fa-star me-1"></i>Write Review
                                                                            </a>
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="mt-2">
                                                                            <a asp-controller="Reviews" asp-action="Product" asp-route-menuItemId="@item.Id" class="btn btn-sm btn-outline-primary">
                                                                                <i class="fas fa-star me-1"></i>Be the first to review
                                                                            </a>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4 product-image-container">
                                                            <img src="@Url.Content(item.ImageUrl)"
                                                                 class="img-fluid rounded"
                                                                 alt="@item.Name"
                                                                 onerror="this.onerror=null;this.src='https://placehold.co/200x200/E8E8E8/B7B7B7?text=Image+Error';">

                                                            <div class="action-buttons">
                                                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                                                                    <input type="hidden" name="menuItemId" value="@item.Id" />
                                                                    <button type="submit" class="btn btn-primary btn-add-to-cart">
                                                                        <i class="fas fa-plus"></i>
                                                                    </button>
                                                                </form>
                                                                <form asp-controller="WishList" asp-action="AddToWishList" method="post" class="wishlist-form">
                                                                    <input type="hidden" name="menuItemId" value="@item.Id" />
                                                                    <button type="submit" class="btn @(Model.WishlistItemIds.Contains(item.Id) ? "btn-danger" : "btn-outline-danger") btn-wishlist" 
                                                                            title="@(Model.WishlistItemIds.Contains(item.Id) ? "Remove from Wishlist" : "Add to Wishlist")">
                                                                        <i class="@(Model.WishlistItemIds.Contains(item.Id) ? "fas" : "far") fa-heart"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No delicious items found</h4>
                            <p class="text-muted">Try adjusting your search terms to find more tasty food!</p>
                        </div>
                    }
                </main>
            </div>
        </div>
    </div>
</div>
