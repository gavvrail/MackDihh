@model FoodOrderingSystem.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h3 class="mb-0">Order Confirmed!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h4 class="text-success">Order #@Model.OrderNumber</h4>
                        <p class="text-muted">Placed on @Model.OrderDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Delivery Details</h5>
                            <p><strong>Address:</strong><br>@Model.DeliveryAddress</p>
                            <p><strong>Phone:</strong> @Model.CustomerPhone</p>
                            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                        </div>

                        <div class="col-md-6">
                            <h5>Order Summary</h5>
                            <div class="d-flex justify-content-between">
                                <span>Subtotal:</span>
                                <span>RM @Model.Subtotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Tax (6%):</span>
                                <span>RM @Model.Tax.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Delivery Fee:</span>
                                <span>@(Model.DeliveryFee == 0 ? "FREE" : $"RM {Model.DeliveryFee:F2}")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.PromoCode) && Model.DiscountAmount > 0)
                            {
                                <div class="d-flex justify-content-between text-success">
                                    <span>Discount (@Model.PromoCode):</span>
                                    <span>-RM @Model.DiscountAmount.ToString("F2")</span>
                                </div>
                            }
                            <hr>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Total:</span>
                                <span class="text-success">RM @Model.Total.ToString("F2")</span>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Menu" asp-action="Index" class="btn btn-primary">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
