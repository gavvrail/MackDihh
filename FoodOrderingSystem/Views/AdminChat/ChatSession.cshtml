@model FoodOrderingSystem.Models.ChatSession

@{
    ViewData["Title"] = $"Chat Session - {Model.Customer?.UserName ?? "Unknown"}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-comments me-2"></i>
                        Chat with @(Model.Customer?.UserName ?? "Unknown")
                    </h5>
                </div>
                <div class="card-body">
                    <div id="chat-messages" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; padding: 1rem; margin-bottom: 1rem;">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="mb-3">
                                <div class="@(message.IsFromCustomer ? "text-end" : "text-start")">
                                    <div class="d-inline-block p-2 rounded @(message.IsFromCustomer ? "bg-primary text-white" : "bg-light")" style="max-width: 70%;">
                                        @if (!message.IsFromCustomer && message.SenderId == "ai-system")
                                        {
                                            <span class="badge bg-success me-2">ðŸ¤– AI</span>
                                        }
                                        @message.Message
                                    </div>
                                    <div class="small text-muted mt-1">@message.Timestamp.ToString("HH:mm")</div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="input-group">
                        <input type="text" id="message-input" class="form-control" placeholder="Type your message...">
                        <button class="btn btn-primary" type="button" onclick="sendMessage()">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Customer Info</h6>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @(Model.Customer?.UserName ?? "Unknown")</p>
                    <p><strong>Email:</strong> @(Model.Customer?.Email ?? "No email")</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                    <p><strong>Messages:</strong> @Model.MessageCount</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const sessionId = '@Model.Id';
    
    function sendMessage() {
        const input = document.getElementById('message-input');
        const message = input.value.trim();
        
        if (!message) return;
        
        fetch('/AdminChat/SendMessage', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: `sessionId=${sessionId}&message=${encodeURIComponent(message)}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                input.value = '';
                location.reload();
            }
        });
    }
    
    document.getElementById('message-input').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            sendMessage();
        }
    });
</script>
