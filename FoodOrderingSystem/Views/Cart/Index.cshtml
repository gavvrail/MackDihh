@model FoodOrderingSystem.Models.Cart
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken ?? string.Empty;
    }
}

@{
    ViewData["Title"] = "Your Cart";
    decimal subtotal = Model.CartItems.Where(item => !item.IsRedeemedWithPoints).Sum(item => item.Quantity * item.MenuItem.Price);
    int totalRedeemedItems = Model.CartItems.Where(item => item.IsRedeemedWithPoints).Sum(item => item.Quantity);
    int totalPointsUsed = Model.CartItems.Where(item => item.IsRedeemedWithPoints).Sum(item => item.PointsUsed);
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
}

<input type="hidden" name="__RequestVerificationToken" value="@GetAntiXsrfRequestToken()">

<div class="cart-full-width">
    <div class="container-fluid">
        <div class="cart-header text-center">
            <h1>@ViewData["Title"]</h1>
            <p class="lead text-muted">Review your delicious items before proceeding to checkout!</p>
        </div>

    <div class="row mt-5">
        <div class="col-lg-8">
            @if (Model.CartItems.Any())
            {
                foreach (var item in Model.CartItems)
                {
                    <div class="cart-item-card">
                        <div class="row g-0">
                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <img src="@(string.IsNullOrEmpty(item.MenuItem.ImageUrl) ? "https://placehold.co/150x150/E8E8E8/B7B7B7?text=Image" : item.MenuItem.ImageUrl)" class="img-fluid rounded-start" alt="@item.MenuItem.Name" style="height: 100px; object-fit: cover;">
                            </div>
                            <div class="col-md-10">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">
                            @item.MenuItem.Name
                            @if (item.IsRedeemedWithPoints)
                            {
                                <span class="badge bg-success ms-2">FREE - Redeemed with Points</span>
                            }
                        </h5>
                        @if (item.IsRedeemedWithPoints)
                        {
                            <p class="card-text fw-bold text-success">FREE</p>
                        }
                        else
                        {
                            <p class="card-text fw-bold text-food-primary">RM@((item.Quantity * item.MenuItem.Price).ToString("F2"))</p>
                        }
                                    </div>
                                    @if (item.IsRedeemedWithPoints)
                                    {
                                        <p class="card-text"><small class="text-success">Redeemed with @item.PointsUsed points</small></p>
                                    }
                                    else
                                    {
                                        <p class="card-text"><small class="text-muted">RM@(item.MenuItem.Price.ToString("F2")) each</small></p>
                                    }
                                    <div class="d-flex align-items-center justify-content-between mt-3">
                                        <div class="input-group quantity-selector" style="width: 120px;">
                                            <button class="btn btn-outline-secondary btn-update-quantity" type="button" data-itemid="@item.Id" data-change="-1">-</button>
                                            <input type="text" class="form-control text-center quantity-input" value="@item.Quantity" readonly>
                                            <button class="btn btn-outline-secondary btn-update-quantity" type="button" data-itemid="@item.Id" data-change="1">+</button>
                                        </div>
                        <a href="#" class="btn btn-sm btn-outline-danger btn-remove-item" data-itemid="@item.Id">
                            <i class="fas fa-trash me-1"></i>Remove
                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center p-5 bg-white rounded border">
            <h4>Your cart is empty.</h4>
            <p>Looks like you haven't added anything delicious to your cart yet!</p>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-primary mt-3">
                <i class="fas fa-utensils me-2"></i>Browse Menu
            </a>
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="summary-card card sticky-top">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <hr>
                    
                    <!-- Subtotal -->
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span class="summary-amount">RM @(subtotal.ToString("F2"))</span>
                    </div>
                    
                    @if (totalRedeemedItems > 0)
                    {
                        <!-- Redeemed Items -->
                        <div class="summary-row">
                            <span>Redeemed Items (@totalRedeemedItems)</span>
                            <span class="summary-amount text-success">FREE</span>
                        </div>
                        <div class="summary-row">
                            <span><small class="text-muted">Points Used: @totalPointsUsed</small></span>
                            <span></span>
                        </div>
                    }
                    
                    <!-- Shipping -->
                    <div class="summary-row">
                        <span>Shipping</span>
                        <span class="summary-amount">Calculated at next step</span>
                    </div>
                    
                    <hr>
                    
                    
                    <!-- Total -->
                    <div class="summary-row total-row">
                        <span>Total</span>
                        <span class="summary-amount total-amount">RM @(subtotal.ToString("F2"))</span>
                    </div>

                    @if (Model.CartItems.Any())
                    {
                        <div class="d-grid mt-4">
                            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-lg" id="checkout-btn">
                                <i class="fas fa-credit-card me-2"></i>PROCEED TO CHECKOUT
                            </a>
                        </div>
                        
                        <!-- Continue Shopping Link -->
                        <div class="text-center mt-3">
                            <a asp-controller="Menu" asp-action="Index" class="continue-shopping-link">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-grid mt-4">
                            <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-utensils me-2"></i>🍽️ Browse Menu
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>